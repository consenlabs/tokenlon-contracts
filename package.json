{
  "name": "tokenlon-contract",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:consenlabs/tokenlon-contract.git",
  "author": "Charles Jhong <charlesjhongc@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0 <16",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "setup": "yarn install --frozen-lockfile && yarn allow-scripts",
    "check-pretty": "prettier --check .",
    "lint": "solhint \"contracts/**/*.sol\"",
    "compile-contracts": "hardhat compile --show-stack-traces --force",
    "compile-foundry": "forge build",
    "test-foundry-local": "forge test -vvv --force --no-match-path 'contracts/test/forkMainnet/*.t.sol'",
    "test-foundry-fork": "forge test -vvv --force --fork-url $FORK_URL --fork-block-number $FORK_BLOCK_NUMBER --match-path 'contracts/test/forkMainnet/*.t.sol'"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.27",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "chai": "^4.3.6",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "hardhat": "^2.9.3",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.4.2-solc-0.7"
  }
}
